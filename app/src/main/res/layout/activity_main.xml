<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" android:minHeight="196dp">

    <TextView
            android:layout_width="260dp"
            android:layout_height="52dp"
            android:text="@string/title_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.164" android:id="@+id/textViewID" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="56dp" android:layout_marginBottom="8dp"
            android:textAlignment="center" android:textSize="18sp" android:textStyle="bold"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextID"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:hint="enter your weight "
            android:textAlignment="textStart" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewID" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/button_text"
            android:layout_width="178dp"
            android:layout_height="44dp"
            android:id="@+id/buttonID"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editTextID"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/displayTextID" android:textAlignment="center"
            android:textStyle="bold" android:textSize="18sp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonID" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:text="@string/mars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/marsCheckBox"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewID" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextID" app:layout_constraintVertical_bias="0.321"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/jupoitorCheckBox"
            android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.042"/>
    <CheckBox
            android:text="@string/jupitor"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/jupoitorCheckBox"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textViewID"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/editTextID"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/venusCheckBox"/>
    <CheckBox
            android:text="@string/venus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/venusCheckBox"
            app:layout_constraintBottom_toTopOf="@+id/editTextID" android:layout_marginBottom="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"/>

</android.support.constraint.ConstraintLayout>